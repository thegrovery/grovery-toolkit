							<Button variant="secondary" onClick="netlifyIdentity.open('login');">Login</Button>
							<Button variant="outline" onClick="netlifyIdentity.open('signup');">Sign up</Button>
							<Button variant="primary" href="/en/getting-started">Get Started Now</Button>

						</div>
					</div>
					
					

