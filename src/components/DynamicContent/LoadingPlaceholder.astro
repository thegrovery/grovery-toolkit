const { text } = Astro.props as Props;
---

<div class="LoadingPlaceholder">
  <span class="text">
    {text ? text : "Loading"}
  </span>
</div>

<style lang="scss">
  .LoadingPlaceholder{
    .text{
      display: block;
    }
    .text:after {
      content: ' .';
      font-size: 2em;
      animation: dots 1.5s steps(5, end) infinite;}

    @keyframes dots {
      0%, 15% {
        color: transparent;
        text-shadow:
          0.35em 0 0 transparent,
          0.7em 0 0 transparent;}
      30% {
        color: black;
        text-shadow:
          0.35em 0 0 transparent,
          0.7em 0 0 transparent;}
      45% {
        text-shadow:
          0.35em 0 0 black,
          0.7em 0 0 transparent;}
      60%, 100% {
        text-shadow:
          0.35em 0 0 black,
          0.7em 0 0 black;}}

  }
</style>

