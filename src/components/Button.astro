---
import { Icon } from 'astro-icon'
// Component Script (JavaScript)
export let variant = 'primary'; // default to primary if no variant is provided
export let href; // optional href prop
---

<!-- Component Template (HTML + JS Expressions) -->
<a 
  class={`button ${Astro.props.variant} ${Astro.props.className ?? ''}`} 
  href={Astro.props.href}
  data-tag={Astro.props['data-tag']}
  {...(Astro.props.href && Astro.props.href.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
  {...Astro.props}
>
  <slot></slot>
  {Astro.props.icon && <Icon name={Astro.props.icon} />}
</a>


<!-- Styles for the primary and secondary buttons -->
<style>

:root {
  --blue: #007B98;
  --teal: #00DFC3;
}
  
/* Global Btn Style */
  .button {
    display: inline-flex;
	  margin: 8px 0;
    padding: 16px 30px;
    border-radius: 10px;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
	  font-weight: 500;
	  transition: all 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
  }
  .button [astro-icon] {
    font-size: 1.45rem;
    width: 1.45rem;
    margin-top: -2px;
  }
  .button.mini {
    padding: 14px 20px;
    font-size: 14px;
  }
  .button.small {
    padding: 12px 28px;
    
  }
  .button:hover {
    text-decoration: none;
  }
  /* Primary Button */
  .primary {
    background-color: var(--theme-accent);
    color: white;
    border: none;
  }
  .primary:hover,.primary:focus {
	  /* background-color: #005e73; */
	  background-color: var(--custom-dark-blue-90);
  }

  /* Secondary Btn */
  .secondary {
    /* background-color: var(--teal); */
    background-color: var(--theme-accent-secondary);
    color: white;
    border: none;
  }
  .secondary:hover,.secondary:focus {
	background-color: #00b39b;
  }

  /* Tertiary Btn */
  .tertiary {
    border-color: var(--theme-accent-secondary);
	border-style: solid;
	border-width: 1px;
    color: var(--theme-accent-secondary);
    background-color: transparent;
  }
  .tertiary:hover,.tertiary:focus {
	background-color:var(--theme-accent-secondary);
	color: #fff;
  }
  
  /* outline */
  .outline {
    border-color: var(--theme-accent-secondary);
	border-style: solid;
	border-width: 1px;
    color: var(--theme-accent-secondary);
    background-color: transparent;
  }
  .outline:hover,.outline:focus, .button.outline.active {
    background-color:var(--theme-accent-secondary);
	color: #fff;
  }
</style>