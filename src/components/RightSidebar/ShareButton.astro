---
// This is the frontmatter section where you can import other components or scripts if needed

import Button from '~/components/Button.astro'

const { heading, body } = Astro.props as Props;
---

<button class='ShareButton' onclick="modalOpenQrCode();">
  Share with QR Code
</button>

<style lang="scss">
  
  .ShareButton {
      border: 1px solid var(--custom-accent-1-50);
      border-radius: 0.5rem;
      background-color: transparent;
      cursor: pointer;
      font-size: 1rem;
      line-height: calc(1 / var(--theme-text-xs));
      &:hover{
        background-color: var(--custom-accent-2-10);
      }
  }

</style>

<script type="text/javascript">
  function modalOpenQrCode(){
    var targetElement = document.querySelector(".ModalWrapper[data-modal='qrcode']");
    targetElement.classList.add("active");
  }
</script>