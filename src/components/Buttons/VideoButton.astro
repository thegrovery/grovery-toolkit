---
// This is the frontmatter section where you can import other components or scripts if needed

import Button from '~/components/Button.astro'

const { videoLink, text } = Astro.props as Props;
---

<button 
  class='VideoButton' 
  data-video={videoLink ? videoLink : "null"}
  onclick="modalOpenVideo();"
>
  {text ? text : "Open Video"}
</button>

<style lang="scss">
  
  .VideoButton {
      border: 1px solid var(--custom-accent-1-50);
      border-radius: 0.5rem;
      background-color: transparent;
      cursor: pointer;
      font-size: 1rem;
      padding: 0.25em 0.5em;
      line-height: calc(1 / var(--theme-text-xs));
      &:hover{
        background-color: var(--custom-accent-2-10);
      }

      svg{
        position: relative;
        top: 4px;
      }
  }

</style>

<script type="text/javascript">
  function modalOpenVideo(){
    
    //get embedded video link
    const dataAttrValue = event.currentTarget.getAttribute('data-video');
    console.log(dataAttrValue); // Expected output: "someValue"

    //set modal's iframe src attribute
    var videoElement = document.querySelector(".ModalWrapper[data-modal='video'] iframe");
    videoElement.setAttribute('src', dataAttrValue);

    //open video modal
    var targetElement = document.querySelector(".ModalWrapper[data-modal='video']");
    targetElement.classList.add("active");
  }
</script>